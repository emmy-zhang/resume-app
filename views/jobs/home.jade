extends ../layout

block content
    .page-header
        h1 Events
        
    if user.events.length > 0
        p You are in #{user.events.length} events.
        ul
            each event in user.events
                a(href='/events/' + event.id)
                    li= event.name
    else
        p You are not in any events.

    a.btn.btn-primary(href='/events/create', role='button') Create an event
